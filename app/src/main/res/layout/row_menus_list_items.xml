<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RMLI_TV_item_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_item_names" />

            <TextView
                android:id="@+id/RMLI_TV_item_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_category_names" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RMLI_TV_item_costs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_item_names" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/RMLI_IB_reduce_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/dummy_less"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/RMLI_TV_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/RMLI_IB_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/dummy_plus_button" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/RMLI_LL_show_prices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/RMLI_TV_cart_entry"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="right"
                android:background="@color/red"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="gone"
                android:text="0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_cart" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/prefix_rs" />

        <TextView
            android:id="@+id/RQP_TV_cost_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="14sp" />


        <Button
            android:id="@+id/RQP_TV_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:text="@string/txt_checkout"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>