<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/FMI_LV_menu_items"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/FMI_LL_show_prices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/FMI_TV_cart_entry"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="right"
                android:background="@color/red"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="gone"
                android:text="0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_cart" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/prefix_rs" />

        <TextView
            android:id="@+id/FMI_TV_cost_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="14sp" />


        <Button
            android:id="@+id/FMI_TV_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:text="@string/txt_checkout"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>