<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_menu_bg"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:background="#ccc"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ivRestaurantLogo"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:scaleType="fitXY"
                    fresco:placeholderImage="@mipmap/ic_launcher"
                    fresco:roundAsCircle="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tvRestaurantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/latolight"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/TextSize_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvRestaurantName"
                        android:fontFamily="@font/latolight"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/TextSize_13"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvRestaurantCuisines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAddress"
                        android:fontFamily="@font/latolight"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/TextSize_13"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:fontFamily="@font/latolight"
                            android:text=""
                            android:textSize="@dimen/TextSize_13" />

                        <View
                            android:layout_width="@dimen/_27sdp"
                            android:layout_height="1px"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:background="#ccc"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/RVRNL_TV_restaurant_order_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:text=""
                            android:textSize="@dimen/TextSize_13"
                            android:visibility="gone" />

                        <View
                            android:layout_width="@dimen/_27sdp"
                            android:layout_height="1px"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:background="#ccc"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/RVRNL_TV_restaurant_order_delivery_on_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:text=""
                            android:textSize="@dimen/TextSize_13"
                            android:visibility="gone" />
                    </LinearLayout>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/ivcertificateImage"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        fresco:placeholderImage="@drawable/halal"
                        fresco:roundAsCircle="true" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/ivFavouriteStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/_8sdp"
                        android:src="@drawable/ic_list_fav_normal"
                        android:textSize="@dimen/TextSize_13" />

                    <!-- <TextView
                         android:id="@+id/tvDistance"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@drawable/background_distance"
                         android:text=" fdfdsf"
                         android:textSize="@dimen/TextSize_13"/>-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:gravity="center"
                            android:paddingRight="@dimen/_2sdp"
                            android:text="@string/txt_distance"
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latolight"
                            android:text="@string/txt_min"
                            android:textSize="@dimen/TextSize_13"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/llOpened"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:textColor="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:gravity="center"
                            android:paddingRight="@dimen/_2sdp"
                            android:text="@string/txt_delivery_fee"
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvRestaurant_min_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/img_info"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="right|center"
                                android:background="@drawable/ic_info"
                                android:padding="@dimen/_10sdp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:gravity="center"
                            android:paddingRight="@dimen/_2sdp"
                            android:text="@string/txt_rating"
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />

                        <RatingBar
                            android:id="@+id/rbRating"
                            style="@style/foodRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="0.0"
                            android:stepSize="1.0"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latolight"
                            android:text="@string/txt_min"
                            android:textSize="@dimen/TextSize_13"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:gravity="center"
                            android:paddingRight="@dimen/_2sdp"
                            android:text="@string/txt_delivers_in"
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDeliversIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:gravity="center"
                            android:maxLines="2"
                            android:paddingRight="@dimen/_2sdp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latolight"
                            android:text="@string/txt_min"
                            android:textSize="@dimen/TextSize_13"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:gravity="center"
                            android:paddingRight="@dimen/_2sdp"
                            android:text="@string/txt_minimum_order"
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvMinOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/latolight"
                            android:text="@string/txt_min"
                            android:textSize="@dimen/TextSize_13"
                            android:textStyle="bold"
                            android:visibility="gone" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:textColor="@color/white">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"
                            android:gravity="center"
                            android:paddingRight="@dimen/_2sdp"
                            android:text="@string/txt_contact_no"
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPhoneNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/latolight"

                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/TextSize_11"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/roundimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            fresco:placeholderImage="@mipmap/ic_launcher"
            fresco:roundAsCircle="true" />

        <ListView
            android:id="@+id/cuisineList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view" />

    </LinearLayout>

</LinearLayout>
